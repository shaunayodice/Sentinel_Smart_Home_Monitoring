#include <msp430.h>





/**

* main.c

*/



unsigned int a;

int i = 0;

#define BUTTON BIT1 

int main(void)

{



    WDTCTL = WDTPW | WDTHOLD;                 // Stop WDT

    P1DIR &= ~BIT1; // P1.1 reads from sensor

    P1REN |= BIT1;

    P1OUT |= BIT1;

    PM5CTL0 &= ~LOCKLPM5;



    while(1){


        if((P1IN & BUTTON) == 0x02){

        _delay_cycles(5000);

        if((P1IN & BUTTON) == 0x02){

            i=1;

            if(i == 1){

            a=1;

            }

            else {

            a=0;

            }}


        }

        while((P1IN & BUTTON) == 0x02);

        i=0;

        a=0;








    }





}
