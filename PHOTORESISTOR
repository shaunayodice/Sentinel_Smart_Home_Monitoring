#include <msp430.h>





/**

* main.c

*/



unsigned int a;

int i = 0;

#define BUTTON BIT3 //push button P4.1

int main(void)

{



    WDTCTL = WDTPW | WDTHOLD;                 // Stop WDT

    P1DIR &= ~BIT3; // P2.2 becomes output

    P1REN |= BIT3;

    P1OUT |= BIT3;

    PM5CTL0 &= ~LOCKLPM5;



    while(1){


        if((P1IN & BUTTON) == 0x08){

        _delay_cycles(5000);

        if((P1IN & BUTTON) == 0x08){

            i=1;

            if(i == 1){

            a=1;

            }

            else {

            a=0;

            }}


        }

        while((P1IN & BUTTON) == 0x08);

        i=0;

        a=0;








    }





}
